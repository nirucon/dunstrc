[global]
    ### Display ###

    # Monitor for notifications
    monitor = 0

    # Sound
    sound = none

    # Follow mouse pointer or keyboard focus
    follow = mouse

    # Notification window geometry (width x height +/- x +/- y)
    geometry = "0x0-30+20"

    # Indicate hidden messages
    indicate_hidden = yes

    # Shrink window if smaller than width
    shrink = no

    # Transparency of the window (0-100)
    transparency = 0

    # Height of the entire notification
    notification_height = 0

    # Separator height between notifications
    separator_height = 2

    # Padding between text and separator
    padding = 8

    # Horizontal padding
    horizontal_padding = 8

    # Frame width around the notification window
    frame_width = 3

    # Frame color around the notification window
    frame_color = "#444444"  # Using col_gray2

    # Color for the separator
    separator_color = auto

    # Sort messages by urgency
    sort = yes

    # Idle threshold in seconds
    idle_threshold = 120

    ### Text ###
    font = JetBrains Mono Medium 10

    # Line spacing
    line_height = 0

    # Markup parsing options (full, strip, no)
    markup = full

    # Message format
    format = "<b>%s</b>\n%b"

    # Text alignment (left, center, right)
    alignment = center

    # Show message age if older than threshold (seconds)
    show_age_threshold = 60

    # Word wrap notifications
    word_wrap = yes

    # Ellipsize long lines (start, middle, end)
    ellipsize = middle

    # Ignore newlines in notifications
    ignore_newline = no

    # Stack notifications with the same content
    stack_duplicates = true

    # Hide count of stacked notifications
    hide_duplicate_count = false

    # Display indicators for URLs and actions
    show_indicators = yes

    ### Icons ###
    # Icon position (left, right, off)
    icon_position = left

    # Max icon size (0 to disable)
    max_icon_size = 32

    # Paths to default icons
    #icon_path = ...

    ### History ###
    # Sticky history notifications
    sticky_history = yes

    # Maximum notifications kept in history
    history_length = 20

    ### Misc/Advanced ###
    # Path to dmenu
    dmenu = dmenu -p dunst:

    # Browser for opening URLs
    browser = brave

    # Always run rule-defined scripts
    always_run_script = true

    # Title of the windows spawned by dunst
    title = Dunst

    # Class of the windows spawned by dunst
    class = Dunst

    # Print notification on startup
    startup_notification = false

    # Verbosity level
    verbosity = mesg

    # Corner radius of the notification window
    corner_radius = 5

    ### Legacy ###
    # Use Xinerama instead of RandR
    force_xinerama = false

    ### Mouse ###
    # Mouse event actions
    mouse_left_click = do_action
    mouse_middle_click = close_all
    mouse_right_click = close_current

[experimental]
    # Calculate dpi per monitor
    per_monitor_dpi = false

[shortcuts]
    # Shortcuts
    close = ctrl+space
    close_all = ctrl+shift+space
    history = ctrl+grave
    context = ctrl+shift+period

[urgency_low]
    # Low urgency settings NOTE ICON PATH
    sound = ""
    background = "#444444"  # Using col_cyan (same as col_gray2)
    foreground = "#E6E6E6"  # Using col_gray3
    timeout = 5
    icon = /home/niru/.config/dunst/normal.png

[urgency_normal]
    # Normal urgency settings NOTE ICON PATH
    sound = ""
    background = "#444444"  # Using col_cyan (same as col_gray2)
    foreground = "#E6E6E6"  # Using col_gray3
    timeout = 5
    icon = /home/niru/.config/dunst/normal.png

[urgency_critical]
    # Critical urgency settings NOTE ICON PATH
    sound = ""
    background = "#900000"
    foreground = "#FFFFFF"  # Using col_gray4
    frame_color = "#FF0000"  # Using col_brightborder
    timeout = 5
    icon = /home/niru/.config/dunst/critical.png
